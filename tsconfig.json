{
  "include": [
    "client/src/**/*",
    "shared/**/*",
    "vite.config.ts",
    "server/**/*"
  ],
  "exclude": [
    "node_modules",
    "build",
    "dist",
    "tsconfig.server.json"
  ],
  "compilerOptions": {
    "noEmit": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "target": "ES2022",

    "strict": true,
    "lib": ["esnext", "dom", "dom.iterable"],
    "jsx": "react-jsx",
    "jsxImportSource": "react",

    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,

    "baseUrl": ".",
    "paths": {
      "@/*": ["./client/src/*"],
      "@shared/*": ["./shared/*"],
      "@assets/*": ["./attached_assets/*"]
    },

    "types": [
      "vite/client",
      "node"
    ]
  }
}
