{
  "include": [
    "client/src/**/*",
    "shared/**/*",
    "vite.config.ts",
    "server/**/*" // ✅ INCLUDE server for shared types (if needed)
  ],
  "exclude": [
    "node_modules",
    "build",
    "dist",
    "tsconfig.server.json" // ✅ Still exclude server build config
  ],
  "compilerOptions": {
    // ✅ No output - Vite handles transpilation
    "noEmit": true,

    // ✅ Use modern modules
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "target": "ES2022",

    // ✅ React and DOM support
    "strict": true,
    "lib": ["esnext", "dom", "dom.iterable"],
    "jsx": "react-jsx",
    "jsxImportSource": "react",

    // ✅ Interop ergonomics
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,

    // ✅ Aliases
    "baseUrl": ".",
    "paths": {
      "@/*": ["./client/src/*"],
      "@shared/*": ["./shared/*"]
    },

    // ✅ Types
    "types": [
      "vite/client",
      "node"
    ]
  }
}
